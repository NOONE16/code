avcoe@avcoe-HP-Pro-3330-MT:~$ gcc shm_server.c -o first
avcoe@avcoe-HP-Pro-3330-MT:~$ gcc shm_client.c -o second
avcoe@avcoe-HP-Pro-3330-MT:~$ ./first ./second
abcdefghijklmnopqrstuvwxyz*/




